//定时跳转
function timeToPage(url){
    var clear;
    if(timeOut >= 1) {
        timeOut -= 1;
        $('.toPageTime').html(timeOut);
        clear = setTimeout(function() {
            timeToPage(url);
        }, 1000);
    } else {
        clearInterval(clear);
        window.location.href = url;
    }
}
